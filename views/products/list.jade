extends ../layout

block content
  h1 Productos
  p Lista de productos
  table
    - each item in products
      tr
        td= item.name
        td
          a(href='/products/update/#{item.id}') Editar
        td
          a(href='/products/delete/#{item.id}') Borrar
  - each item in products
    label= item.name

  a(href='/products/new') Nuevo producto
  br
  a(href='/products/update') Actualizar productos
  br
  a(href='/productos/remove') Eliminar productos
